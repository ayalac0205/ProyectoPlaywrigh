{
  "scripts": {
    "install:playwright": "npx playwright install",
    "test:cucumber": "cucumber-js --require-module ts-node/register --require features/steps/**/*.ts features/**/*.feature --format progress",
    "test:playwright": "playwright test",
    "test:headed": "PWDEBUG=1 npm run test:cucumber",
    "report:open": "playwright show-report reports/playwright",
    "report": "node generate-report.js",
    "test": "npx cucumber-js --require features/steps/**/*.js features --format json:reports/cucumber-report.json",
    "test:report": "npm run test && npm run report"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "allure-commandline": "^2.36.0",
    "cucumber-html-reporter": "^7.2.0",
    "playwright": "^1.58.2"
  }
}
